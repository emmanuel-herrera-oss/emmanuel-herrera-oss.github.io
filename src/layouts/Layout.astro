---
import { Image } from "astro:assets";
import TitleImage from "../assets/manny_codes.svg"
import "global.css"
import "katex/dist/katex.min.css"

const { pageTitle } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manny Codes - {pageTitle ?? 'Index'}</title>
  <meta name="google-site-verification" content="XXETTTSCPTNtlmiBsQGd5ZLBrYBNpbeMqjPU4cWcG3M" />
</head>
<body>
  <div class="container">
    <header>
      <!-- Sample inline SVG -->
      <div>
        <a href="/"><Image src={TitleImage} alt="" class="logo-image" /></a>
      </div>
      <nav>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot/>
    </main>

    <footer>
      <p>&copy; 2025 Emmanuel Herrera. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>


<style>
/* Base styles */
body {
  margin: 0;
  padding: 0;
  background-color: #dddddd; /* Darker background */
  font-family: Arial, sans-serif;
  color: #333;
}

.container {
  max-width: 960px;
  margin: 0 auto;
  padding: 1rem;
  background-color: #f5f5f5; /* Lighter center column */
  min-height: 100dvh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* Header styles */
header {
  text-align: center;
  margin-bottom: 1.5rem;
}

.logo {
  margin-bottom: 1rem;
}

.nav-links {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.nav-links a {
  text-decoration: none;
  color: #333;
  font-weight: bold;
}

.nav-links a:hover {
  color: #4CAF50;
}

/* Main content */
main {
  flex: 1;
  padding-bottom: 2rem;
  display: flex;
  justify-content: center;
}

main h1 {
  margin-top: 0;
}

/* Footer */
footer {
  text-align: center;
  font-size: 0.9rem;
  color: #666;
  border-top: 1px solid #ccc;
  padding: 1rem 0;
}

.logo-image {
  width: 480px;
}

/* Responsive padding on small screens */
@media (max-width: 600px) {
  .container {
    padding: 1rem;
  }

  .nav-links {
    flex-direction: column;
    gap: 0.5rem;
  }

  .logo-image {
    width: 320px;
  }
}

</style>

